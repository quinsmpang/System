{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noStrictGenericChecks": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2015",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2015.promise",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2017.object",
      "es2017.sharedmemory"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}